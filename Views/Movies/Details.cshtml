@model eTickets.Models.Movie

@{
    ViewData["Title"] = "Details";
}

<h1>Show Details</h1>

<div>
    
    <hr />
     <div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Details </h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                    <div class="Form-group text-center">
                        <img id="ProfilePicturePreview" />

                    </div>
                    <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" readonly />
                    <span asp-validation-for="Name" cclass="text-danger"></span>
                    </div>

                    
                    <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" readonly />
                    <span asp-validation-for="Description" cclass="text-danger"></span>
                    </div>
                   

                    <div class="form-group">
                    <label asp-for="StartDate" class="control-label"></label>
                    <input asp-for="StartDate" class="form-control" readonly />
                    <span asp-validation-for="StartDate" cclass="text-danger"></span>
                    </div>
                <div class="form-group">
                    <a class="btn btn-outline-success float-right" asp-action="Edit">Edit</a>
                    <a class="btn btn-outline-secondary" asp-action="Index">Show all</a>
                </div>
            </div>

        </div>
    </div>
</div>
@section scripts{
    <script>
$(document).ready(function() {
    var output = document.getElementById('ProfilePicturePreview');
    output.src = $("ProfilePictureUrl").val();
})
    </script>
} 
