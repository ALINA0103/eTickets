@model eTickets.Models.AdminLogin
@{
    ViewData["Title"] = "Login";
    
}
 <br>  @ViewBag.ErrorMessage <br/>


<div class="container">
    <div class="row mt-lg-5">
        <div class="col-4 offset-4 border border-primary rounded p1-5 pr-5 pb-5">
           
            <form method="post" asp-controller="Movies" asp-action="Login">
                <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control" />
                

                <span class="text-danger">@TempData["errorMessage"]</span>
            </div>
               <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                 <span class="text-danger">@TempData["errorPassword"]</span>
            </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-block btn-primary mb-2" value="Log In" />
                </div>
            </form>
            <div class="text-center">
                <a class="text-primary" asp-action="ForgotUserName">Forgot UserName?</a> 
                <a class="text-primary" asp-action="ForgotPassword">Forgot Password?</a> 

            </div>
        </div>
    </div>
</div>
